<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
	<!-- baseLayout : 공통 레이아웃의 뷰 이름을 지정. template : 전체 레이아웃을 정하는 JSP 위치 지정 -->
	<definition name="baseLayout" template="/WEB-INF/views/common/layout.jsp">
		<put-attribute name="title" value="레이아웃 페이지" />
		<put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
		<put-attribute name="side" value="/WEB-INF/views/common/side.jsp" />
		<put-attribute name="body" value=""/>
		<put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp" />
		<put-attribute name="quickMenu" value="/WEB-INF/views/common/quickMenu.jsp" />
	</definition>
	
	<!-- 메인 화면의 뷰이름 -->
	<definition name="/main/main" extends="baseLayout">
		<put-attribute name="title" value="bob 페이지" />
		<put-attribute name="body" value="/WEB-INF/views/main/main.jsp" />
	</definition>
</tiles-definitions>